<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" Width="500" VerticalAlignment="Center">
        <Label Content="Login"></Label>
        <TextBox x:Name="Log"></TextBox>
        <Label Content="Password"></Label>
        <PasswordBox x:Name="Pass"></PasswordBox>
        <Button x:Name="reg" Margin="10" Content="Register" Click="clSign"></Button>
        <Button Content="Показать List" Click="clListView"/>
    </StackPanel>
</Window>
