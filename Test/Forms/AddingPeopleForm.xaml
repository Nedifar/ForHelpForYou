<Window x:Class="Test.Forms.AddingPeopleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.Forms"
        mc:Ignorable="d"
        Title="AddingPeopleForm" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Имя" Margin="0 0 5 0"/>
                <TextBox x:Name="tbName" Text="{Binding Name}" Width="140"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5" HorizontalAlignment="Right">
                <TextBlock Text="Возраст" Margin="0 0 5 0"/>
                <TextBox x:Name="tbAge" Text="{Binding Age}" Width="140"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" Text="Пол" Margin="0 0 5 0"/>
                <ComboBox  x:Name="cbGender"  Width="140"/>
            </StackPanel>
            <Button Content="Добавить" Margin="0 5" Click="clAdd"/>
        </StackPanel>
    </Grid>
</Window>
